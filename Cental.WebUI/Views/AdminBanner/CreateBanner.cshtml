@using Cental.DtoLayer.BannerDtos
@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h1>Banner Ekleme Sayfası</h1>


<form method="post">
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Resim</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    
    <button class="btn btn-outline-primary">Kaydet</button>
</form>