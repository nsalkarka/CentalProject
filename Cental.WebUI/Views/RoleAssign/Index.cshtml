@model List<ResultUserDto>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}

<div class="alert alert-info">
    <h5>Sitenin işleyişi açısından rol isimleri şu şekilde olmalıdır <strong>Admin,Manager,User</strong></h5>
</div>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>E-Mail</th>
        <th>Roller</th>
        <th>Rol Ata</th>


    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.FullName</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>
                @foreach(var role in item.Roles)
                {
                    @role <br />
                }

            </td>
            
            <td><a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-pen"></i></a>Rol Ata </td>
        </tr>
    }
</table>


