@model List<AssignRoleDto>
@{
    ViewData["Title"] = "Rol Atama";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
<h3>@ViewBag.fullName Kullanıcısına Rol Atama</h3>
<form method="post" >
    @for (int i=0; i<Model.Count; i++)
    {
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].RoleName" />
        <input type="hidden" asp-for="@Model[i].RoleId" />
        <div class="form-check">
        
        <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
    }
    <button class="btn btn-outline-dark">Rolleri Ata</button>

</form>

